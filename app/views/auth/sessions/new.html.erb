    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
            <a href="../index.html">
                <%= image_tag "logo", alt: "concept", class: "logo-img" %>
            </a><span class="splash-description">Please enter your user information.</span></div>
            <div class="card-body">
                <%= form_with do |form| %>
                    <div class="form-group">
                        <%= form.text_field :username, class: "form-control form-control-lg", placeholder: "Username", autocomplete: "off" %>
                    </div>
                    <div class="form-group">
                        <%= form.text_field :password, class: "form-control form-control-lg", placeholder: "Password", autocomplete: "off" %>
                    </div>
                    <div class="form-group">
                        <label class="custom-control custom-checkbox">
                            <%= form.check_box :remember_me, class: "custom-control-input" %><span class="custom-control-label">Remember Me</span>
                        </label>
                    </div>
                    <%= form.button "Sign in", class: "btn btn-primary btn-lg btn-block", type: "submit" %>
                <% end %>
            </div>
            <div class="card-footer bg-white p-0  ">
                <div class="card-footer-item card-footer-item-bordered">
                    <%= link_to "Create An Account", new_auth_registration_path, class: "footer-link" %>
                </div>
                <div class="card-footer-item card-footer-item-bordered">
                    <%= link_to "Forgot Password", new_auth_password_reset_path, class: "footer-link" %>
                </div>
            </div>
        </div>
    </div>