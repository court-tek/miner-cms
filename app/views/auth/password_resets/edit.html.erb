    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
            <a href="../index.html">
                <%= image_tag "logo", alt: "concept", class: "logo-img" %>
            </a><span class="splash-description">Almost done. Enter your new password, and you're good to go.</span></div>
            <div class="card-body">
                <form>
                <%= form_with do |form| %>
                    <div class="form-group">
                        <%= form.password_field :password, class: "form-control form-control-lg", id: "password", placeholder: "New password", autocomplete: "off" %>
                    </div>
                    <div class="form-group">
                        <%= form.password_field :password_confirmation, class: "form-control form-control-lg", id: "password", placeholder: "Confirm new password", autocomplete: "off" %>
                    </div>
                    <%= form.button "Reset Password", class: "btn btn-primary btn-lg btn-block", type: "submit" %>
                <% end %>
            </div>
        </div>
    </div>