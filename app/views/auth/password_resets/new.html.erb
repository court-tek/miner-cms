    <div class="splash-container">
        <div class="card ">
            <div class="card-header text-center">
            <a href="../index.html">
                <%= image_tag "logo", alt: "concept", class: "logo-img" %>
            </a><span class="splash-description">Fear not. We'll email you instuctions to reset your password.</span></div>
            <div class="card-body">
                <%= form_with do |form| %>
                    <div class="form-group">
                        <input class="form-control form-control-lg" id="username" type="text" placeholder="Username" autocomplete="off">
                    </div>
                    <div class="form-group">
                    </div>
                    <%= form.button "Reset Password", class: "btn btn-primary btn-lg btn-block", type: "submit" %>
                <% end %>
            </div>
            <div class="card-footer text-center bg-white p-0">
                <div class="card-footer-item card-footer-item-bordered">
                    <%= link_to "Return to login", new_auth_password_reset_path, class: "footer-link" %>
                </div>
            </div>
        </div>
    </div>