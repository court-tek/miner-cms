<div class="container-fluid  dashboard-content">
      <!-- ============================================================== -->
      <!-- pageheader -->
      <!-- ============================================================== -->
      <div class="row">
          <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
              <div class="page-header">
                  <h2 class="pageheader-title">All Menu Items</h2>
                  <p class="pageheader-text">Proin placerat ante duiullam scelerisque a velit ac porta, fusce sit amet vestibulum mi. Morbi lobortis pulvinar quam.</p>
                  <div class="page-breadcrumb">
                      <nav aria-label="breadcrumb">
                          <ol class="breadcrumb">
                              <li class="breadcrumb-item"><%= link_to "Dashboard", admin_dashboard_index_path, class: "breadcrunmb-link" %></li>
                              <li class="breadcrumb-item active" aria-current="page">All Menu Items</li>
                          </ol>
                      </nav>
                  </div>
              </div>
          </div>
      </div>
      <!-- ============================================================== -->
      <!-- end pageheader -->
      <!-- ============================================================== -->
               
      <div class="row">
          <!-- ============================================================== -->
          <!-- responsive table -->
          <!-- ============================================================== -->
          <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
              <div class="card">
                  <h5 class="card-header">Menu Items</h5>
                  <div class="card-body">
                    <h6 class="card-text" style="color: green"><%= notice %></h6>
                    <div class="table-responsive ">
                          <table class="table">
                              <thead>
                                  <tr>
                                      <th scope="col">Id</th>
                                      <th scope="col">Title</th>
                                      <th scope="col">Description</th>
                                      <th scope="col">Item Image</th>
                                      <th scope="col">Date Created</th>
                                      <th scope="col">Edit</th>
                                      <th scope="col">Delete</th>
                                  </tr>
                              </thead>
                              <tbody>
                                  <% @admin_menu_items.each do |item| %>
                                    <tr>
                                        <th scope="row"><%= item.id %></th>
                                        <td><%= item.title %></td>
                                        <td><%= item.description.first(10)%>...</td>
                                        <td><%= item.image %></td>
                                        <td><%= item.created_at %></td>
                                        <td>
                                          <%= link_to edit_admin_menu_item_path(item) do %>
                                            <i class="ti-pencil-alt"></i>
                                          <% end %>
                                        </td>
                                        <td>
                                          <%= button_to admin_menu_item_path(item), method: :delete, class: "btn btn-link" do %>
                                            <i class="ti-trash"></i>
                                          <% end %>
                                        </td>
                                    </tr>
                                  <% end %>
                              </tbody>
                          </table>
                      </div>
                  </div>
              </div>
          </div>
          <!-- ============================================================== -->
          <!-- end responsive table -->
          <!-- ============================================================== -->
      </div>  
      <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
          <%= link_to "Create New Item", new_admin_menu_item_path, class: "btn btn-primary btn-lg" %>
        </div>
      </div>     
</div>